<bgp xmlns="http://cisco.com/ns/yang/Cisco-IOS-XR-ipv4-bgp-cfg" xmlns:nc="urn:ietf:params:xml:ns:netconf:base:1.0" nc:operation="merge">
  <instance>
    <instance-name>default</instance-name>
    <instance-as>
      <as>0</as>
      <four-byte-as>
        <as>65172</as>
        <bgp-running/>
        <default-vrf>
          <bgp-entity>
            <neighbors>
              <neighbor>
                <neighbor-address>172.16.255.2</neighbor-address>
                <update-source-interface>Loopback0</update-source-interface>
                <neighbor-afs>
                  <neighbor-af>
                    <af-name>vpnv4-unicast</af-name>
                    <activate/>
                  </neighbor-af>
                </neighbor-afs>
                <remote-as>
                  <as-xx>0</as-xx>
                  <as-yy>65172</as-yy>
                </remote-as>
              </neighbor>
            </neighbors>
          </bgp-entity>
          <global>
            <global-afs>
              <global-af>
                <af-name>vpnv4-unicast</af-name>
                <enable/>
              </global-af>
            </global-afs>
          </global>
        </default-vrf>
      </four-byte-as>
    </instance-as>
  </instance>
</bgp>
